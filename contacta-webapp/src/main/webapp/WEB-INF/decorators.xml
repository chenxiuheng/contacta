<!-- decorators -->
<decorators defaultdir="/WEB-INF/decorators">
 <excludes>
  <pattern>/index.*</pattern>
  <pattern>/css/*</pattern>
  <pattern>/js/*</pattern>
  <pattern>/static/*</pattern>
  <pattern>/struts/*</pattern>
  <pattern>/nodecorate/*</pattern>
  <pattern>/o/ldap-*.action</pattern>
  <pattern>/o/empty.action</pattern>
  <pattern>/o/channels.action</pattern>
  <pattern>/o/phonebook-*.action*</pattern>
 </excludes>

 <decorator name="plain" page="plain.ftl">
  <pattern>/o/*.action</pattern>
 </decorator>

 <decorator name="dojo" page="dojo.ftl">
  <pattern>/s/main.action</pattern>
  <pattern>/a/main.action</pattern>
 </decorator>
</decorators>

