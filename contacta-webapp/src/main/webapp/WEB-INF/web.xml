 <!-- Contacta Servlet -->
 <servlet>
  <display-name>Contacta Servlet</display-name>
  <servlet-name>contacta</servlet-name>
  <servlet-class>mic.contacta.webapp.ContactaServlet</servlet-class>
  <load-on-startup>8</load-on-startup>
 </servlet>
 <servlet-mapping>
  <servlet-name>contacta</servlet-name>
  <url-pattern>/contacta</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>contacta</servlet-name>
  <url-pattern>/contacta/*</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>contacta</servlet-name>
  <url-pattern>/ptool</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>contacta</servlet-name>
  <url-pattern>/ptool/*</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>contacta</servlet-name>
  <url-pattern>/replica</url-pattern>
 </servlet-mapping>

 <!-- provisioning -->
 <servlet>
  <display-name>Provisioning Servlet</display-name>
  <servlet-name>provisioning</servlet-name>
  <servlet-class>mic.contacta.webapp.ProvisioningServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>provisioning</servlet-name>
  <url-pattern>/p/*</url-pattern>
 </servlet-mapping>

